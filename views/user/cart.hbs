<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Items</th>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>
            <tbody>
                {{#each product}}
                <tr>
                   
                    <td><img style="width: 70px;height: 70px;"src="/product-images/{{this.product._id}}.jpg" alt=""></td>
                    <td>{{this.product.Name}}</td>
                    <td>{{this.product.Price}}</td>
                    <td>
                        <button class="cart-items-count mr-3" onclick="changeQuantity('{{this._id}}','{{this.product._id}}',-1)">-</button>
                        <span id="{{this.product._id}}">{{this.quantity}}</span>
                        <button class="cart-items-count ml-3" onclick="changeQuantity('{{this._id}}','{{this.product._id}}',1)">+</button>
                    </td>
                    <td>
                        <a href="" class="btn btn-danger" onclick="removeItem('{{this._id}}','{{this.product._id}}')" >Remove</a>
                    </td>
                </tr>
                {{/each}}


            </tbody>
        </table>
        <hr>
        <div class="float-right">
            <h5 class="float-left mr-5">TOTAL - RS:10000</h5>
            <a href="/place-order" class="btn btn-success mt-3" style="width: 100%;">PLACE ORDER</a>
        </div>
    </div>
</section>

